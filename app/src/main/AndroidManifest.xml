<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.USE_BIOMETRIC" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.NFC" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />
    <uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="32"
        tools:remove="android:maxSdkVersion"
        tools:ignore="ScopedStorage" />

    <application
        android:name=".MainApplication"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.BlockIDSdkDemo"
        android:usesCleartextTraffic="true"
        tools:ignore="DataExtractionRules"
        tools:replace="android:allowBackup,android:label,android:theme">

        <activity
            android:name=".ui.SplashActivity"
            android:exported="true"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.onekosmos.blockidsample.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <activity
            android:name=".ui.fido2.PINManagementActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.MaterialAppTheme" />
        <activity
            android:name=".ui.enrollment.EnrollmentActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.login.PinVerificationActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.RegisterTenantActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.liveID.LiveIDScanningActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.passport.EPassportChipActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.passport.PassportScanningActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.qrAuth.AuthenticatorActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.qrAuth.ScanQRCodeActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.enrollPin.PinEnrollmentActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.nationalID.NationalIDScanActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.driverLicense.DriverLicenseScanActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.restore.RecoverMnemonicActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.restore.RestoreAccountActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.verifySSN.VerifySSNActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ui.fido2.FIDO2BaseActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.MaterialAppTheme" />
        <activity
            android:name=".ui.userManagement.AddUserActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.MaterialAppTheme" />
        <activity
            android:name=".ui.about.AboutActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.MaterialAppTheme" />
        <activity
            android:name=".ui.userManagement.UserOptionsActivity"
            android:resizeableActivity="true"
            android:theme="@style/AppTheme.MaterialAppTheme" />
    </application>

</manifest>