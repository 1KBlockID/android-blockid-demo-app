<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary3</item>
        <item name="colorPrimaryDark">@color/primary3</item>
        <item name="colorAccent">@color/primary3</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="AppTheme.MaterialAppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary3</item>
        <item name="colorPrimaryDark">@color/primary3</item>
        <item name="colorAccent">@color/primary3</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">@dimen/dimen_0dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:focusable">true</item>
        <item name="pinViewStyle">@style/CardView</item>
    </style>
</resources>