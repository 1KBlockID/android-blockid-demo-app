<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:overScrollMode="ifContentScrolls"
    android:scrollbarStyle="insideOverlay"
    android:scrollbars="vertical"
    tools:context="com.onekosmos.blockidsample.ui.verifySSN.VerifySSNActivity">

    <RelativeLayout
        android:id="@+id/webLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/linLayout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_50dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/webBckBtn"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_15dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:padding="@dimen/dimen_5dp"
            android:src="@drawable/icon_backarrow" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_back_web"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen_15dp"
                android:text="@string/label_back"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:textColor="@color/black"
                android:textSize="@dimen/dimen_16sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:layout_marginTop="@dimen/dimen_5dp"
                android:layout_marginStart="@dimen/dimen_20dp"
                android:text="@string/ssn_verification_heading"
                android:textColor="@color/primary3"
                android:textSize="@dimen/dimen_28sp" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/webShareBtn"
            android:layout_width="@dimen/dimen_25dp"
            android:layout_height="@dimen/dimen_25dp"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimen_40dp"
            android:tint="@color/primary3"
            android:src="@drawable/icon_share" />
        </LinearLayout>

        <WebView
            android:id="@+id/web_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/linLayout" />

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/dimen_20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/bckBtn"
                    android:layout_width="@dimen/dimen_25dp"
                    android:layout_height="@dimen/dimen_25dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:padding="@dimen/dimen_5dp"
                    android:src="@drawable/icon_backarrow" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/txt_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_15dp"
                    android:text="@string/label_back"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimen_16sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_20dp"
                    android:text="@string/ssn_verification_heading"
                    android:textColor="@color/primary3"
                    android:textSize="@dimen/dimen_28sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/dimen_360dp"
                android:layout_height="match_parent"
                android:layout_below="@+id/top_layout"
                android:layout_marginStart="@dimen/dimen_24dp"
                android:orientation="vertical">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etPasswordLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:passwordToggleEnabled="true">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/ssn_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimen_60dp"
                        android:hint="@string/ssn_required_text"
                        android:inputType="numberPassword"
                        android:lines="1"
                        android:maxLength="9" />
                </com.google.android.material.textfield.TextInputLayout>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/bdate_text"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimen_60dp"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:hint="@string/birth_date_required_text"
                    android:inputType="text"
                    android:maxLines="1" />

                <LinearLayout
                    android:id="@+id/consent_layout"
                    android:layout_width="@dimen/dimen_360dp"
                    android:layout_height="@dimen/dimen_94dp">

                    <androidx.appcompat.widget.AppCompatCheckBox
                        android:id="@+id/consent_cb"
                        android:layout_width="@dimen/dimen_24dp"
                        android:layout_height="@dimen/dimen_26dp" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/dimen_15dp"
                        android:text="@string/ssn_consent" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_continue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/dimen_24dp"
                    android:background="@android:color/darker_gray"
                    android:enabled="false"
                    android:paddingHorizontal="@dimen/dimen_20dp"
                    android:text="@string/continue_text"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/dimen_16sp" />

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>