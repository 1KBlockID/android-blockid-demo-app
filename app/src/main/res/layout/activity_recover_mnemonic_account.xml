<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.restore.RecoverMnemonicActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_back"
        android:layout_width="@dimen/dimen_25dp"
        android:layout_height="@dimen/dimen_25dp"
        android:layout_marginStart="@dimen/dimen_10dp"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:padding="@dimen/dimen_5dp"
        android:src="@drawable/icon_backarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_15dp"
        android:text="@string/label_back"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintBottom_toBottomOf="@id/img_back"
        app:layout_constraintStart_toEndOf="@id/img_back"
        app:layout_constraintTop_toTopOf="@id/img_back" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:text="@string/label_recover_mnemonic"
        android:textColor="@color/black"
        android:textSize="@dimen/dimen_28sp"
        app:layout_constraintBottom_toBottomOf="@id/txt_back"
        app:layout_constraintStart_toEndOf="@id/txt_back"
        app:layout_constraintTop_toTopOf="@id/txt_back" />

    <TableLayout
        android:id="@+id/table_mnemonic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_50dp"
        android:stretchColumns="1,2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_title">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_20dp">

            <include
                android:id="@+id/phrase_01"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="@dimen/dimen_42dp" />

            <include
                android:id="@+id/phrase_07"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginStart="@dimen/dimen_42dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp">

            <include
                android:id="@+id/phrase_02"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="@dimen/dimen_42dp" />

            <include
                android:id="@+id/phrase_08"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginStart="@dimen/dimen_42dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp">

            <include
                android:id="@+id/phrase_03"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="@dimen/dimen_42dp" />

            <include
                android:id="@+id/phrase_09"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginStart="@dimen/dimen_42dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp">

            <include
                android:id="@+id/phrase_04"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="@dimen/dimen_42dp" />

            <include
                android:id="@+id/phrase_10"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginStart="@dimen/dimen_42dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp">

            <include
                android:id="@+id/phrase_05"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="@dimen/dimen_42dp" />

            <include
                android:id="@+id/phrase_11"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginStart="@dimen/dimen_42dp" />
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_15dp"
            android:layout_marginBottom="@dimen/dimen_15dp">

            <include
                android:id="@+id/phrase_06"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginStart="@dimen/dimen_42dp" />

            <include
                android:id="@+id/phrase_12"
                layout="@layout/layout_mnemonic_row"
                android:layout_width="@dimen/dimen_0dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_marginStart="@dimen/dimen_42dp" />
        </TableRow>
    </TableLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_copy_phrases"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dimen_74dp"
        android:background="@color/black"
        android:paddingHorizontal="@dimen/dimen_20dp"
        android:text="@string/label_copy_phrases"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="@dimen/dimen_16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>