<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/dimen_270dp"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:paddingTop="@dimen/dimen_25dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_dialog_error_icon"
        android:layout_width="@dimen/dimen_30dp"
        android:layout_height="@dimen/dimen_30dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_dialog_error_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:gravity="center"
        android:textSize="@dimen/dimen_18sp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_dialog_error_icon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txt_dialog_error_message"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:gravity="center"
        android:textSize="@dimen/dimen_16sp"
        android:textColor="@color/black"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_dialog_error_title" />

    <View
        android:id="@+id/view_dialog_error"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_1dp"
        android:background="@color/black"
        android:layout_marginTop="@dimen/dimen_27dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_dialog_error_message"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dialog_error_btn1"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/label_cancel"
        android:textAllCaps="false"
        android:textSize="@dimen/dimen_18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/view_dialog_error_vertical"
        app:layout_constraintTop_toBottomOf="@+id/view_dialog_error" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dialog_error_btn2"
        android:layout_width="@dimen/dimen_0dp"
        android:layout_height="wrap_content"
        android:background="@null"
        android:text="@string/label_ok"
        android:textAllCaps="false"
        android:textSize="@dimen/dimen_18sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/view_dialog_error_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_dialog_error" />

    <View
        android:id="@+id/view_dialog_error_vertical"
        android:layout_width="@dimen/dimen_1dp"
        android:layout_height="@dimen/dimen_0dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/btn_dialog_error_btn2"
        app:layout_constraintEnd_toStartOf="@id/btn_dialog_error_btn1"
        app:layout_constraintStart_toEndOf="@id/btn_dialog_error_btn2"
        app:layout_constraintTop_toTopOf="@id/btn_dialog_error_btn2" />
</androidx.constraintlayout.widget.ConstraintLayout>